<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_time_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="时间轴"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="学习Path"
        app:layout_constraintLeft_toLeftOf="@id/btn_time_line"
        app:layout_constraintTop_toBottomOf="@id/btn_time_line" />

    <Button
        android:id="@+id/btn_bezier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="学习贝塞尔曲线"
        app:layout_constraintLeft_toLeftOf="@id/btn_time_line"
        app:layout_constraintTop_toBottomOf="@id/btn_path" />

</android.support.constraint.ConstraintLayout>